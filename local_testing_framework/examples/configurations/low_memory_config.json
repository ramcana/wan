{
    "system": {
        "platform": "auto",
        "gpu_memory_fraction": 0.8,
        "cpu_cores": "auto",
        "memory_limit_gb": 8
    },
    "directories": {
        "models": "./models",
        "outputs": "./outputs",
        "cache": "./cache",
        "logs": "./logs"
    },
    "optimization": {
        "enable_attention_slicing": true,
        "enable_cpu_offload": true,
        "enable_vae_tiling": true,
        "enable_sequential_cpu_offload": true,
        "vae_tile_size": 64,
        "attention_slice_size": 1,
        "low_mem_mode": true,
        "enable_model_cpu_offload": true,
        "offload_buffers": true
    },
    "performance": {
        "target_720p_time_minutes": 12.0,
        "target_1080p_time_minutes": 25.0,
        "max_vram_usage_gb": 6.0,
        "vram_warning_threshold": 0.85,
        "cpu_warning_percent": 75,
        "memory_warning_percent": 80,
        "stats_refresh_interval": 10
    },
    "testing_framework": {
        "performance_targets": {
            "target_720p_time_minutes": 12.0,
            "target_1080p_time_minutes": 25.0,
            "max_vram_usage_gb": 6.0,
            "vram_warning_threshold": 0.85,
            "cpu_warning_threshold": 75.0,
            "expected_vram_reduction_percent": 90.0
        },
        "environment_requirements": {
            "min_python_version": "3.8.0",
            "required_cuda_version": "11.0",
            "min_memory_gb": 8,
            "min_vram_gb": 4
        },
        "reporting_options": {
            "default_format": "json",
            "include_charts": false,
            "chart_types": [
                "line"
            ],
            "export_formats": [
                "json",
                "html"
            ],
            "lightweight_mode": true
        },
        "diagnostic_settings": {
            "enable_auto_recovery": true,
            "log_level": "WARNING",
            "monitoring_interval": 10,
            "cleanup_interval": 600,
            "memory_monitoring": true
        }
    },
    "ui": {
        "port": 7860,
        "host": "127.0.0.1",
        "enable_auth": false,
        "theme": "light",
        "max_concurrent_users": 1,
        "enable_queue": true,
        "queue_size": 3
    },
    "api": {
        "enable_api": false,
        "api_port": 7861,
        "rate_limit": 10,
        "timeout_seconds": 120
    }
}