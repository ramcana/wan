# Production Environment Configuration
# Optimized for production deployment

# Hugging Face Authentication Token (Required)
HF_TOKEN=your_production_huggingface_token_here

# CUDA Configuration for Production
CUDA_VISIBLE_DEVICES=0,1,2,3
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512,garbage_collection_threshold:0.8

# Python Path Configuration
PYTHONPATH=/opt/wan22:/opt/wan22/local_testing_framework

# Logging Configuration (Production level)
LOG_LEVEL=INFO
LOG_FILE=/var/log/wan22/wan22_errors.log
ENABLE_CONSOLE_LOGGING=false
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Cache Configuration (Production paths)
HF_HOME=/opt/wan22/cache/huggingface
TRANSFORMERS_CACHE=/opt/wan22/cache/transformers
TORCH_HOME=/opt/wan22/cache/torch
DIFFUSERS_CACHE=/opt/wan22/cache/diffusers

# Performance Tuning for Production
OMP_NUM_THREADS=16
MKL_NUM_THREADS=16
TOKENIZERS_PARALLELISM=true

# Production Settings
DEBUG=false
TESTING=false
ENABLE_PROFILING=false

# Security Settings
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/wan22.crt
SSL_KEY_PATH=/etc/ssl/private/wan22.key
API_KEY_REQUIRED=true
SESSION_TIMEOUT=3600

# Monitoring and Alerting
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
ALERT_WEBHOOK_URL=https://monitoring.company.com/webhook

# Testing Framework Production Settings
LTF_DEBUG=0
LTF_ENABLE_MONITORING=true
LTF_REPORT_FORMAT=json
LTF_ARCHIVE_REPORTS=true
LTF_CLEANUP_INTERVAL=300

# Database Configuration (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/wan22
REDIS_URL=redis://localhost:6379/0

# Load Balancer Configuration
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300