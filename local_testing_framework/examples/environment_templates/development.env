# Development Environment Configuration
# Optimized for development and testing workflows

# Hugging Face Authentication Token (Required)
HF_TOKEN=your_huggingface_token_here

# CUDA Configuration for Development
CUDA_VISIBLE_DEVICES=0,1
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:256,garbage_collection_threshold:0.6

# Python Path Configuration
PYTHONPATH=.:./local_testing_framework

# Logging Configuration (Verbose for development)
LOG_LEVEL=DEBUG
LOG_FILE=wan22_errors.log
ENABLE_CONSOLE_LOGGING=true

# Cache Configuration
HF_HOME=./cache/huggingface
TRANSFORMERS_CACHE=./cache/transformers
TORCH_HOME=./cache/torch
DIFFUSERS_CACHE=./cache/diffusers

# Performance Tuning for Development
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8
TOKENIZERS_PARALLELISM=false

# Development Settings
DEBUG=true
TESTING=true
ENABLE_PROFILING=true

# Testing Framework Specific
LTF_DEBUG=1
LTF_ENABLE_MONITORING=true
LTF_REPORT_FORMAT=html

# Browser Testing (for UI tests)
SELENIUM_BROWSER=chrome
SELENIUM_HEADLESS=true

# API Testing
API_TEST_TIMEOUT=60
API_BASE_URL=http://localhost:7860